---
// Custom SiteTitle component that links to shugur.com
import type { Props } from '@astrojs/starlight/props';
import logoUrl from '../assets/shugur-logo-full.svg?url';

const { locale } = Astro.props;
---

<a href="https://shugur.com" class="site-title-wrapper">
  <div class="logo">
    <img 
      src={logoUrl} 
      alt="Shugur Logo" 
      class="logo-img"
    />
  </div>
</a>

<style>
  .site-title-wrapper {
    text-decoration: none;
    color: inherit;
    display: flex;
    align-items: center;
    gap: var(--sl-nav-gap);
    font-size: var(--sl-text-h4);
    font-weight: 600;
    color: var(--sl-color-text-accent);
    white-space: nowrap;
  }

  .site-title-wrapper:hover {
    text-decoration: none;
    opacity: 0.8;
  }

  .logo {
    display: flex;
    align-items: center;
  }

  .logo-img {
    height: 40px; /* Exact spec: Desktop height 40px */
    width: 170px; /* Exact spec: Desktop width 170px */
    max-width: 170px;
    object-fit: contain;
    object-position: 0 50%;
  }

  /* Mobile responsive logo sizing */
  @media (max-width: 768px) {
    .logo-img {
      height: 28px; /* Exact spec: Mobile height 28px */
      width: 120px; /* Exact spec: Mobile width 120px */
      max-width: 120px;
    }
  }
</style>