---
// Custom SiteTitle component that links to shugur.com
import type { Props } from '@astrojs/starlight/props';
import config from 'virtual:starlight/user-config';

const { locale } = Astro.props;
---

<a href="https://shugur.com" class="site-title-wrapper">
  <div class="logo">
    {config.logo?.src && (
      <img 
        src={config.logo.src} 
        alt={config.logo.alt || 'Shugur Logo'} 
        class="logo-img"
      />
    )}
  </div>
</a>

<style>
  .site-title-wrapper {
    text-decoration: none;
    color: inherit;
    display: flex;
    align-items: center;
    gap: var(--sl-nav-gap);
    font-size: var(--sl-text-h4);
    font-weight: 600;
    color: var(--sl-color-text-accent);
    white-space: nowrap;
  }

  .site-title-wrapper:hover {
    text-decoration: none;
    opacity: 0.8;
  }

  .logo {
    display: flex;
    align-items: center;
  }

  .logo-img {
    height: 80px;
    width: auto;
    max-width: 400px;
    object-fit: contain;
    object-position: 0 50%;
  }

  /* Mobile responsive logo sizing */
  @media (max-width: 768px) {
    .logo-img {
      height: 64px;
      max-width: 320px;
    }
  }
</style>